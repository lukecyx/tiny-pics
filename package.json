{
  "name": "tiny-pics",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build:next": "next build",
    "build:lambda": "tsc -p ./lambdas/resizer/tsconfig.json",
    "prepare:sam": "bun run build:lambda && cp ./lambdas/resizer/package.json .aws-sam/build/ImageResizerFunction",
    "zip:lambda": "cd lambdas/resizer/dist && zip -r ../../../terraform/lambda/lambda.zip . ",
    "sam:build": "sam build ImageResizerFunction --use-container",
    "sam:invoke": "sam local invoke ImageResizerFunction --event mock-event.json",
    "build": "bun run build:lambda && npm run build:next && npm run build:lambda && npm run zip:lambda",
    "build:lambda:local": "bun run sam:build && bun run prepare:sam && cp .aws-sam/build/ImageResizerFunction/dist/index.js .aws-sam/build/ImageResizerFunction/",
    "start": "next start",
    "lint": "eslint"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.939.0",
    "@aws-sdk/client-s3": "^3.937.0",
    "@aws-sdk/s3-request-presigner": "^3.937.0",
    "@tailwindcss/forms": "^0.5.10",
    "clsx": "^2.1.1",
    "next": "16.0.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/styled-components": "^5.1.35",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "prettier": "^3.6.2",
    "prettier-plugin-embed": "^0.5.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "vitest": "^4.0.8"
  }
}
